{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Nishant Kohli",
  "scripts": {
    "codegen": "graphql-codegen --config ./src/codegen.ts",
    "dev": "yarn run codegen && nodemon --exec 'ts-node -r tsconfig-paths/register src/index.ts'",
    "build": "yarn run codegen && tsc && tsc-alias && cp -R ./src/schema/*.graphql ./dist/schema",
    "start": "NODE_ENV=production node ./dist/index.js",
    "prod": "yarn build && yarn start",
    "lint": "eslint --fix ."
  },
  "dependencies": {
    "@apollo/datasource-rest": "^6.4.1",
    "@apollo/server": "^5.1.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.1.3",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "mongoose": "^8.19.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "6.0.1",
    "@graphql-codegen/typescript": "5.0.2",
    "@graphql-codegen/typescript-resolvers": "5.1.0",
    "@nish1896/eslint-flat-config": "^3.0.3",
    "@types/node": "^24.10.0",
		"eslint": "^9.39.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "keywords": [],
  "license": "ISC"
}